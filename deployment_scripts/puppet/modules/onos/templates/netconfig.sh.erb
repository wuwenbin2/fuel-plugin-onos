#!/bin/bash

set -eux
ifconfig <%= @public_eth -%> <%= @gateway_ip -%>00/24 up
route add default gw <%= @gateway_ip %>
ping -c 5 <%= @gateway_ip %>
gatewayMac=`arp -a <%= @gateway_ip -%> | awk '{print $4}'`
/opt/onos/bin/onos "externalgateway-update -m $gatewayMac"
ifconfig <%= @public_eth -%> 0 down
